enter geometryParams
  set M=4
  set N=4
leave

enter problemParams
  set cfl=0.5

  set startTime=0.0
  set endTime=1.0

  set yExtent=4

  set diffusivity=1.0
  set buoyancy=1.0

  set forcingModel=tauBenchmark

  set temperatureModel=sineWave
  enter initialTemperature
    set xModes=2
    set yModes=2
    set temperatureScale=100.0
  leave

  set viscosityModel=solCXBenchmark
  enter initialViscosity
    set viscosityScale=2
  leave

  set boundaryModel=tauBenchmark
leave
